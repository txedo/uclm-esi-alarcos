<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<profile model="model.gl.knowledge.GLAntennaBall" entity="es.uclm.inf_cr.alarcos.desglosa_web.model.Project">
    <name>Boolean2FloatRange</name>
    <description>This profile shows if boolean and float range compatibility works. Not audited projects should be scaled to 0.5 and the audited ones to 1.3. The icon shows if the project is delayed. Repaired incidences are painted on the green ball and non repaired incidences on the red ball. Parent ball color shows the market color. No caption configured on this profile.</description>
    <mappings>
        <mapping>
            <entityAttr name="id" type="int"/>
            <modelAttr name="id" type="int"/>
        </mapping>
        <mapping>
            <entityAttr name="name" type="string"/>
            <modelAttr name="label" type="string"/>
        </mapping>
        <mapping>
            <entityAttr name="audited" type="boolean"/>
            <modelAttr name="scale" type="float_range"/>
            <rule>
                <low xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema" xsi:type="xs:boolean">false</low>
                <high xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema" xsi:type="xs:string"></high>
                <value xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema" xsi:type="xs:float">0.5</value>
            </rule>
            <rule>
                <low xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema" xsi:type="xs:boolean">true</low>
                <high xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema" xsi:type="xs:string"></high>
                <value xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema" xsi:type="xs:float">1.3</value>
            </rule>
        </mapping>
        <mapping>
            <entityAttr name="delay" type="boolean"/>
            <modelAttr name="progressionMark" type="boolean"/>
        </mapping>
        <mapping>
			<entityAttr name="nonRepairedIncidences" type="int"/>
            <modelAttr name="leftChildBallValue" type="string"/>
        </mapping>
        <mapping>
            <entityAttr name="repairedIncidences" type="int"/>
            <modelAttr name="rightChildBallValue" type="string"/>
        </mapping>
        <mapping>
            <entityAttr name="market_color" type="hexcolor"/>
            <modelAttr name="color" type="color"/>
        </mapping>
    </mappings>
    <constants>
        <constant name="parentBallRadius" type="float"/>
    </constants>
    <caption/>
</profile>
