<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model.business.knowledge">
	<class name="Image" table="images" lazy="false">
		<id name="id" column="id" type="int">
			<generator class="native" />
		</id>
		<property name="filename" column="filename" type="string" not-null="false" />
		<property name="contentType" column="content_type" type="string" not-null="false" />
		<property name="data" column="data" type="binary" not-null="false" />
	</class>
</hibernate-mapping>