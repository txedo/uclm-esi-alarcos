<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="model.business.knowledge">
	<class name="Factory" table="factories" lazy="false">
		<id name="id" column="id" type="int">
			<generator class="native" />
		</id>
		<many-to-one name="company" column="company_id" not-null="true" class="Company" cascade="none" lazy="false" />
		<property name="name" column="name" type="string" not-null="false" />
		<property name="information" column="information" type="string" not-null="false" />
		<many-to-one name="director" column="director_id" unique="true" not-null="true" class="Director" cascade="all" lazy="false" />
		<property name="email" column="contact_email" type="string" not-null="false" />
		<property name="employees" column="employees" type="int" not-null="false" />
		<many-to-one name="address" column="address_id" unique="true" not-null="true" class="Address" cascade="all" lazy="false" />
	</class>
</hibernate-mapping>